import serial
import time
from Maestro import maestro

servo = maestro.Controller()

print("Veuillez choisir une expression :")

choix = int(input("1. Neutre\n2. Joie\n3. Triste\n4. Surprise\n5. Colère\n"))

if(choix == 1) :

	print("Vous avez choisi l'expression Neutre")

	servo.setAccel(2,50)
